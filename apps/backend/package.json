{
  "name": "backend",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "volta": {
    "node": "18.12.1",
    "yarn": "1.22.19"
  },
  "scripts": {
    "build": "rimraf dist && swc src -d dist",
    "build:prisma": "prisma generate && yarn rebuild:backend",
    "db:console": "docker compose exec postgres psql -h localhost -U postgres -d webapp_dev",
    "db:migrate": "knex migrate:latest",
    "docker:db:migrate": "docker compose run backend yarn db:migrate",
    "docker:prune": "docker system prune --all",
    "rebuild:backend": "docker compose build backend && docker compose rm --stop backend && docker compose up -d backend",
    "start": "node dist/index.js",
    "start:docker": "yarn build && node --inspect=0.0.0.0 dist/index.js"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.57",
    "@swc/core": "^1.3.24",
    "@tsconfig/node18": "^1.0.1",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.15",
    "@types/graphql-iso-date": "^3.4.0",
    "@types/lodash": "^4.14.191",
    "@types/morgan": "^1.9.3",
    "@types/node": "^18.11.17",
    "@typescript-eslint/eslint-plugin": "^5.47.0",
    "@typescript-eslint/parser": "^5.47.0",
    "eslint": "^8.30.0",
    "prisma": "^4.8.0",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "@apollo/server": "^4.3.0",
    "@faker-js/faker": "^7.6.0",
    "@prisma/client": "4.8.0",
    "body-parser": "^1.20.1",
    "bullmq": "^3.5.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "graphql": "^16.6.0",
    "graphql-iso-date": "^3.6.1",
    "graphql-tag": "^2.12.6",
    "graphql-type-json": "^0.3.2",
    "ioredis": "^5.2.4",
    "knex": "^2.3.0",
    "lodash": "^4.17.21",
    "morgan": "^1.10.0",
    "nanoid": "3.3.4",
    "pg": "^8.8.0"
  }
}
